  	</div>
	  <div>
		{{#each categories}}
			<button class="catBtn btn btn-primary" id="choices" data-category="{{category}}">{{name}}</button>
		{{/each}}
		<a href = "/api/favSong"><button class="btn btn-primary" id="favBtn" data-category="saves">favorites</button></a>
	</div>
	<div class="search-wrap hide">
      <form id="searchForm">
          <input type="text" id="search" placeholder="Type something..." autocomplete="off" class="form-control" />
          <input type="submit" value="search" class="form-control btn btn-primary w100" id="submit">
      </form>
  </div>
  <div id="results"></div>
  </div>
</div>



